<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 第一层 -->
    <item>
        <shape>
            <solid android:color="#1f3FCCE9"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>
    <item android:bottom="1dp" android:right="1dp" android:top="1dp" android:left="1dp">
        <shape>

            <gradient android:startColor="#47D4E6"
                android:endColor="@color/color_blue"
                android:angle="0"
                android:type="linear" />

            <stroke android:color="@color/color_blue"
                android:width="1dp"/>

            <padding
                android:left="3dp"
                android:bottom="3dp"
                android:right="3dp"
                android:top="3dp"/>

            <corners
                android:radius="3dp"/>

        </shape>
    </item>
</layer-list>

